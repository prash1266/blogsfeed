<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit Blog: <%=blog.title%></div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title:</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Author:</label>
            <input type="text" name="blog[author]" value="<%= blog.author %>">
        </div>
        <div class="field">
            <label>Alias:</label>
            <input type="text" name="blog[alias]" value="<%= blog.alias %>">
        </div>
        <div class="field">
            <label>Image:</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Blog:</label>
            <textarea name="blog[body]" ><%= blog.body %></textarea>
        </div>
        <input class="ui secondary button" type="submit">
    </form>
    <script>
                CKEDITOR.replace( 'blog[body]' );
    </script>
</div>
<% include ./partials/footer %>
