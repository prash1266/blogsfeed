<% include ./partials/header %>
<div class="container-fluid padding-gap showhidden">
    <div>
        <h1 class="putcenter"><%= blog.title %></h1>
        <div class="adjust">Date: <%= blog.created.toDateString() %></div>
        <center><img class="post_img" src="<%= blog.image %>"></center>
    </div>
    <div class="container-fluid">
        <!--<img class="user-circle" src="users/dev1.png">-->
        <span class="adjust">Post By: <%= blog.author %></span>
    </div>
    <div class="jumbotron bg-light padding-gap">
        <p><%= blog.body %></p>
    </div>
</div>
<div class="container">
    <div id="disqus_thread"></div>
</div>
